<section class="section section_wrapper summary col-xs-12 col-sm-5 col-md-4">
	<div class="stub stub-summary">
		<div class="stub_aside">
			<div class="stub_thumb" style="background-image: url('http://lorempixel.com/500/500/city/1');">
			</div>
		</div>
		<div class="stub_main">
			<span class="stub_title">The Lion King</span>
			<div class="stub_description">at Lyceum Theatre</div>
		</div>
	</div>
	{{#if hasSeat}}
	<div class="control">
		<span class="control_label">
			Show Date:
		</span>
		<span class="control_input">
			2nd May 2015
		</span>
	</div>
	<div class="control">
		<span class="control_label">
			Show Time:
		</span>
		<span class="control_input">
			20:00
		</span>
	</div>
	<div class="control">
		<span class="control_label">
			Seating Area:
		</span>
		<span class="control_input">
			Upper Circle
		</span>
	</div>
	<div class="control">
		<span class="control_label">
			Tickets:
		</span>
		<span class="control_input">
			2
		</span>
	</div>
	{{/if}}
	{{#if hasHotel}}
	<div class="stub stub-summary">
		<div class="stub_aside">
			<div class="stub_thumb" style="background-image: url('http://lorempixel.com/500/500/city/2');">
			</div>
		</div>
		<div class="stub_main">
			<span class="stub_title">Strand Palace</span>
			<span class="stub_rating">
				<i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
			</span>
			<div class="stub_description">5 miles from theatre</div>
		</div>
	</div>

	{{!-- {{> _displayedPrice}} --}}
	<div class="price price-large">
		<div class="price_total">total: <span class="price_amount price_amount-large">&pound;500</span></div>
		<div class="price_description">includes tickets &amp; hotel</div>
	</div>
	{{/if}}
	{{#if hasPull}}
	<div id="summaryPull" class="summary_pull visible-xs">
		<i class="fa fa-chevron-down fa-2x"></i>
	</div>
	{{/if}}
</section>